<<h1>Division#add</h1>
<p>※部署名・データの作成</p>
<% if @division.errors.any? %>
<ul>
	<% @division.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<table>
	<%= form_for(@division, url:{controller:'divisions', action:'add'}) do |form| %>
	<tr><th>name</th>
		<td><%= form.text_field :name %></td></tr>
	<tr><th></th>
		<td><%= form.submit "送信" %></td></tr>
	<% end %>
</table>