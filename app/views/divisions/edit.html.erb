<h1>Division#edit</h1>
<p>※「<%= @division.name %>」部署名の編集</p>
<% if @division.errors.any? %>
<ul>
	<% @division.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
</ul>
<% end %>
<table>
	<%= form_for(@division, url:{controller:'divisions', action:'edit'}) do |form| %>
	<tr><th>Name</th>
		<td><%= form.text_field :name %></td></tr>
	<tr><th></th>
		<td><%= form.submit "送信" %></td></tr>
	<% end %>
</table>